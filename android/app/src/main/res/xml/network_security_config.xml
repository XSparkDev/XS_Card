<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">192.168.2.237</domain>
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">10.0.2.2</domain>
        <domain includeSubdomains="false">127.0.0.1</domain>
    </domain-config>
    
    <!-- Allow HTTPS traffic for production -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">xscard-app.onrender.com</domain>
        <domain includeSubdomains="true">*.onrender.com</domain>
    </domain-config>
    
    <!-- Default config for all other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>
