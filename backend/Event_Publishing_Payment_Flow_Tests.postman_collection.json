    {
      "name": "Payment Flow Tests",
      "item": [
        {
          "name": "Create Paid Event",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Paid event created successfully', function () {",
                  "    pm.response.to.have.status(201);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.event.eventType).to.equal('paid');",
                  "    pm.expect(response.event.publishingCost.price).to.be.greaterThan(0);",
                  "    const eventId = response.event.id || response.event._id;",
                  "    pm.collectionVariables.set('eventId', eventId);",
                  "    pm.globals.set('eventId', eventId);",
                  "    console.log('Event ID captured:', eventId);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Payment Test Event\",\n  \"description\": \"This event requires payment to publish\",\n  \"eventDate\": \"2024-12-31T18:00:00.000Z\",\n  \"eventType\": \"paid\",\n  \"ticketPrice\": 100,\n  \"maxAttendees\": 100,\n  \"visibility\": \"public\",\n  \"category\": \"business\",\n  \"venue\": \"Test Venue\",\n  \"address\": \"123 Test Street\",\n  \"city\": \"Test City\",\n  \"country\": \"South Africa\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/events",
              "host": ["{{baseUrl}}"],
              "path": ["events"]
            }
          }
        },
        {
          "name": "Attempt to Publish Event (Should Require Payment)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Payment required for event publishing', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.paymentRequired).to.be.true;",
                  "    pm.expect(response.paymentUrl).to.exist;",
                  "    pm.expect(response.amount).to.be.greaterThan(0);",
                  "    pm.expect(response.reference).to.exist;",
                  "    pm.globals.set('paymentReference', response.reference);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/{{eventId}}/publish",
              "host": ["{{baseUrl}}"],
              "path": ["events", "{{eventId}}", "publish"]
            }
          }
        },
        {
          "name": "Check Event Status (Should be Pending Payment)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Event status is pending payment', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.event.status).to.equal('pending_payment');",
                  "    pm.expect(response.event.paymentReference).to.exist;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/{{eventId}}",
              "host": ["{{baseUrl}}"],
              "path": ["events", "{{eventId}}"]
            }
          }
        },
        {
          "name": "Attempt to Publish Pending Event (Should Fail)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Cannot publish pending payment event', function () {",
                  "    pm.response.to.have.status(400);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.false;",
                  "    pm.expect(response.message).to.contain('pending payment');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/{{eventId}}/publish",
              "host": ["{{baseUrl}}"],
              "path": ["events", "{{eventId}}", "publish"]
            }
          }
        }
