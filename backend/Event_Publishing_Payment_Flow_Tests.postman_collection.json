            },
            "url": {
              "raw": "{{baseUrl}}/events/payment/webhook",
              "host": ["{{baseUrl}}"],
              "path": ["events", "payment", "webhook"]
            }
          }
        },
        {
          "name": "Check Event Status After Payment (Should be Published)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Event is now published after payment', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
